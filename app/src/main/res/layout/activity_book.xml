<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center|center_horizontal"
        android:text="선택 확인"
        android:textColor="@color/material_on_background_disabled"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/departDay"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center|center_vertical"
        android:text="2021년 10월 19일"
        android:textColor="@color/mint"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_ash"
            android:baselineAligned="false"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/depart"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center|center_horizontal"
                android:text="용산"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserveDepartTime"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center|center_horizontal"
                android:text="10 : 35"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_play" />

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_ash"
            android:baselineAligned="false"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reserveArrive"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center|center_horizontal"
                android:text="군산"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserveArriveTime"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center|center_horizontal"
                android:text="13 : 55"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/trainNum"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center|center_horizontal"
        android:text="[무궁화호 1557]"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seatNum"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center|center_horizontal"
        android:text="일반실 3호차 47"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="20분이내 결제하셔야 승차권 예약이 완료됩니다."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="승차권은 발급받은 스마트폰에서만 확인 가능합니다."
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/mint"
            android:text="예약하기"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/mint"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bb1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="승차권예매"
            app:icon="@drawable/train_icon"
            app:iconGravity="top"
            app:iconPadding="5dp"
            app:iconSize="130px" />

        <Button
            android:id="@+id/bb2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="승차권확인"
            app:icon="@drawable/ticket_icon"
            app:iconGravity="top"
            app:iconPadding="5dp"
            app:iconSize="130px" />

        <Button
            android:id="@+id/bb3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="마이페이지"
            app:icon="@drawable/mypage_icon"
            app:iconGravity="top"
            app:iconPadding="5dp"
            app:iconSize="130px" />
    </LinearLayout>
</LinearLayout>